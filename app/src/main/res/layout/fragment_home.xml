<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.HomeFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/collapsing"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                app:layout_collapseMode="parallax"
                android:background="@color/colorPrimary"
                android:layout_height="75dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity=""
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profile">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yoel Imanuel"
                    android:layout_weight="3"
                    android:fontFamily="@font/roboto"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_love">

                </ImageView>
            </LinearLayout>


            <SearchView
                android:id="@+id/sercing"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:supportsRtl="true"
                android:iconifiedByDefault="false"

                android:searchIcon="@drawable/ic_search_black_24dp"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:theme="@style/AppSearchView"
                android:queryHint="Cari yang ingin kamu bantu"
                android:background="@drawable/background_search_home"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="90dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="170dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                  android:layout_height="180dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_donasiuang"
                            >

                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="80dp"
                            android:textAlignment="center"
                            android:text="Donasi Uang"
                            android:fontFamily="@font/roboto"
                            android:textColor="#000"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_donasibarang"
                            >

                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="80dp"
                            android:textAlignment="center"
                            android:text="Donasi barang"
                            android:fontFamily="@font/roboto"
                            android:textColor="#000"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_beasiswa"
                            >

                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="80dp"
                            android:textAlignment="center"
                            android:text="Beasiswa"
                            android:fontFamily="@font/roboto"
                            android:textColor="#000"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_lainnya"
                            >

                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="80dp"
                            android:textAlignment="center"
                            android:text="Lainnya"
                            android:fontFamily="@font/roboto"
                            android:textColor="#000"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>



    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>